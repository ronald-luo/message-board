<div class="comment-section">

    <% for( let index=0; index < messages.length; index++ ) { %>
    <div class="comment">

        <div class="comment-left">
            <img src="https://s2.svgbox.net/files.svg?ic=reactjs&color=000" width="32" height="32">
        </div>

        <div class="comment-right">
            <div class="comment-meta">
                <h3 class="username"><a href="#"><%= messages[index].user %></a></h3>
                <span class="comment-date"><%= messages[index].added %></span>
            </div>

            <p><%= messages[index].text %></p>

            <ul>
                <li class="comment-upvotes">
                    
                    <a>
                        <img class="c-up" src="https://s2.svgbox.net/materialui.svg?ic=arrow_circle_up&color=787c7e" width="32" height="32">
                        24.6k
                        <img class="c-down" src="https://s2.svgbox.net/materialui.svg?ic=arrow_circle_down&color=787c7e" width="32" height="32">
                    </a>
                    
                </li>
            
                <li><a href="#"><img src="https://s2.svgbox.net/octicons.svg?ic=comment&color=878a8c" width="32" height="32">Reply</a></li>
                <li><a href="#"><img src="https://s2.svgbox.net/hero-outline.svg?ic=share&color=878a8c" width="32" height="32">Share</a></li>
                <li><a href="#"><img src="https://s2.svgbox.net/hero-outline.svg?ic=flag&color=878a8c" width="32" height="32">Report</a></li>
                <li><a href="#"><img src="https://s2.svgbox.net/octicons.svg?ic=bookmark&color=878a8c" width="32" height="32">Save</a></li>
            </ul>
        </div>
    </div>
    <% } %>

    <hr>

</div>